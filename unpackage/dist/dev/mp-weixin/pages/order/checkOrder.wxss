
.order-tip {
	width: 100%;
	border-bottom: 1px solid #ededed;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 30rpx;
}
.order-tip-text {
	font-size: 20rpx;
	color: #656565;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding-left: 40rpx;
	position: relative;
}
.order-tip-text:before {
	content: '';
	display: inline-block;
	width: 16rpx;
	height: 16rpx;
	background: #fec401;
	border-radius: 8rpx;
	position: absolute;
	top: 50%;
	left: 0rpx;
	margin-top: -8rpx;
}

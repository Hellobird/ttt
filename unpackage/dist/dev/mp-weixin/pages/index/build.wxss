
.title{
	text-align: center;
	margin-top: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	height: 33rpx;
}
.title ._span{
	width: 123rpx;
	font-size: 18rpx;
	text-align: center;
	color: white;
	border-radius: 16.5rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
	height: 33rpx;
	line-height: 33rpx;
}
.title image{
	width: 87rpx;
	height: 8rpx;
}
.bg0{
	background: #45c5db;
}
.bg1{
	background: #efcb70;
}
.youhui>._div{
	width: 332rpx;
	height: 188rpx;
	border-radius: 10rpx;
	border: 1px solid #c8c8c8;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	font-size: 22rpx;
}
.youhui>._div ._div:nth-child(2){
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.youhui>._div:nth-child(2n) ._div:nth-child(1){
	width: 60rpx;
	line-height: 60rpx;
	border-right: 1px solid #C8C8C8;
}
.youhui>._div:nth-child(2n) ._div:nth-child(3){
	width: 70rpx;
	line-height: 70rpx;
	border-left: none;
}
.youhui>._div:nth-child(2n) ._div:nth-child(2) image{
	float: right;
	right: 0;
}
.youhui>._div ._div:nth-child(1){
	width: 70rpx;
	height: 188rpx;
	-webkit-writing-mode:tb-rl;
	    -ms-writing-mode:tb-rl;
	        writing-mode:tb-rl;
	text-align: center;
	line-height: 70rpx;
	letter-spacing: 4rpx;
	overflow: hidden;
	white-space: nowrap;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
}
.youhui>._div ._div:nth-child(3) ._span:first-child{
	-webkit-writing-mode:lr-tb;
	    -ms-writing-mode:lr-tb;
	        writing-mode:lr-tb;
	line-height: 22rpx;
	letter-spacing: 0;
}
.youhui>._div ._div:nth-child(3){
	width: 70rpx;
	height: 188rpx;
	border-left: 1px solid #C8C8C8;
	-webkit-writing-mode:tb-rl;
	    -ms-writing-mode:tb-rl;
	        writing-mode:tb-rl;
	text-align: center;
	line-height: 70rpx;
	letter-spacing: 4rpx;
}
.youhui image{width: 190rpx;height: 190rpx;}
.youhui>._div:nth-last-child(n+2){
	margin-bottom: 20rpx;
}
.leftright{
	padding: 0 20rpx;
	margin-top: 27rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	padding: 0 20rpx;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.recom>._div:nth-last-child(n+2){
	margin-bottom: 60rpx;
}
.recom>._div image{
	display: inline-block;
	vertical-align: top;
	border-radius: 50%;
}
.recom>._div{
	width: 50%;
	height: 208rpx;
}
.recom>._div ._div{
	position: absolute;
	margin-left: 190rpx;
	margin-top: 144rpx;
	width: 144rpx;
	text-align: center;
	font-size: 22rpx;
	line-height: 32rpx;
}
.recom>._div ._div ._p{
	overflow: hidden;
	white-space: nowrap;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
}
.recom>._div:nth-last-child(-n+2) ._div{
	margin-left: 0;
}
.recom>._div image:nth-child(2){
	width:190rpx;
	height: 190rpx;
}
.recom>._div image:nth-child(3){
	width: 144rpx;
	height: 144rpx;
}
.recom>._div:nth-last-child(-n+2) image:nth-child(2){
	width:144rpx;
	height: 144rpx;
}
.recom>._div:nth-last-child(-n+2) image:nth-child(3){
	width: 190rpx;
	height: 190rpx;
}



.shopping-car {
  background: #efefef;
}
.shopping-options-wrap {
  padding: 31rpx;
  height: 50rpx;
  clear: both;
  overflow: hidden;
}
.shopping-options {
  float: right;
}
.shopping-options:after {
  overflow: hidden;
}
.shopping-option-item {
  display: inline-block;
  height: 50rpx;
  padding: 0 25rpx;
  border: 1rpx solid #fe0100;
  border-radius: 25rpx;
  color: #fe0100;
  line-height: 50rpx;
  font-size: 24rpx;
}
.shopping-collect {
  margin-right: 10rpx;
  border-color: #e9bb27;
  color: #e9bb27;
}
.shopping-goods-list {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 10rpx;
  background: #fff;
}
.shopping-seller {
  width: 100%;
  padding-left: 70rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  font-size: 24rpx;
}
.shopping-goods-container {
  background: #EFEFEF;
}
.shopping-goods-item {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding-bottom: 30rpx;
}
.shopping-goods-img {
  width: 300rpx;
  height: 200rpx;
}
.shopping-goods-img image {
  height: 100%;
  width: 100%;
}
.shopping-good-info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 200rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  font-size: 24rpx;
}
.shopping-good-name {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.shopping-good-type {
  padding: 0rpx 20rpx;
  background: #e5e5e5;
  border-radius: 25rpx;
  line-height: 50rpx;
}
.shopping-good-price {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin-top: 30rpx;
}
.shopping-num-container {
  margin-left: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  width: 168rpx;
  height: 30rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.shopping-num-container ._li:nth-child(2) {
  width: 100rpx;
  text-align: center;
}
.shopping-option {
  width: 65rpx;
  height: 100%;
  border-right: 1rpx solid #000;
  text-align: center;
  font-size: 30rpx;
}
.shopping-add {
  border-right: 0rpx;
  border-left: 1rpx solid #000;
}
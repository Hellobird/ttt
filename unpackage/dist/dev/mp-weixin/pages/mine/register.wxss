@import "../../common/vendor.wxss";

.setinput {
  padding: 0 30rpx;
}
.setinput>._div>._span,
.setinput>._div>._input,
.setinput>._div>._textarea {
  font-size: 24rpx;
  line-height: 80rpx;
  min-height: 80rpx;
  margin-top: 20rpx;
  height: 80rpx;
}
.setinput>._div>._input,
.setinput>._div>._textarea {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.setinput>._div {
  border-bottom: 1rpx solid #C8C8C8;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.setinput>._div>._span {
  width: 150rpx;
}
.setinput>._div>._textarea {
  width: 500rpx;
  margin-top: 38rpx;
  line-height: 40rpx;
}
.setinput>._div>._input {
  width: 300rpx;
}
.submit {
  background: #F6C11B;
  color: white;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 28rpx;
  position: relative;
}
.xieyi {
  padding: 40rpx 0;
}
.xieyi ._span {
  display: inline-block;
  vertical-align: top;
  margin-right: 10rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.xieyi ._span:first-child {
  width: 28rpx;
  height: 28rpx;
  border-radius: 10rpx;
  border: 1rpx solid #5d5c5c;
  color: white;
  text-align: center;
  font-size: 20rpx;
  line-height: 28rpx;
}
.xieyi .active {
  color: #F6C11B!important;
  border: 1rpx solid #F6C11B!important;
}
.xieyi ._span:last-child {
  color: #F6C11B;
}
.getcode {
  float: right;
  color: #F6C11B;
  width: 200rpx;
  text-align: center;
  border-left: 1rpx solid #C8C8C8;
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 45rpx;
  min-height: 30rpx;
  font-size: 24rpx;
}
.tip {
  line-height: 60rpx;
  text-align: right;
  font-size: 24rpx;
}
._p {
  position: relative;
  height: 80rpx;
}
.login {
  height: 100%;
  width: 100%;
  background: transparent;
  position: absolute;
  z-index: 1500;
}
.login ._button {
  background: transparent;
  width: 100%;
  height: 100%;
  color: transparent;
  position: absolute;
}
.login ._button:after {
  border: none;
}